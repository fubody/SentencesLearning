extends ../layout

block content
    script(type='text/javascript', src='/index.js')
    .container
        .row
            .panel.panel-default
                .panel-heading
                    h3 今日任务
                .panel-body
                    h1(align='center')
                        small 共有句子数
                        span #{total_num}
                    h1(align='center')
                        small 还需完成
                        span #{practice_num}
                    div(align='center')
                        a.btn.btn-info.btn-lg(type='button',onclick='turnToPractice()') 开始学习（L）
                        a.btn.btn-info.btn-lg(type='button',onclick='turnToAdmin()',style='margin-left:10px') 查看句子（A）